# Step 1: Use a base image that has OpenJDK 11 and Maven installed
FROM maven:3.8.6-openjdk-11-slim as builder

# Step 2: Install necessary packages
RUN apt-get update && apt-get install -y ca-certificates git openssl && rm -rf /var/lib/apt/lists/*

# Step 3: Set environment variables for Git credentials and repo details
ARG GIT_USERNAME
ARG GIT_PASSWORD
ARG GIT_REPO_URL
ARG GIT_BRANCH=main

# Step 4: Set the working directory in the container
WORKDIR /app

# Step 5: Copy your settings.xml file to the container
COPY settings.xml /root/.m2/settings.xml

# Step 6: Disable SSL for Maven and clone the repository using Git credentials
RUN git clone --branch $GIT_BRANCH https://$GIT_USERNAME:$GIT_PASSWORD@$GIT_REPO_URL .

# Step 7: Build the project with Maven, bypassing SSL validation
RUN mvn --settings /root/.m2/settings.xml clean install \
    -Dmaven.wagon.http.ssl.insecure=true \
    -Dmaven.wagon.http.ssl.allowall=true

# Step 8: Create a new minimal image with just JRE and your application
FROM openjdk:11-jre-slim

# Step 9: Copy the built artifacts from the Maven image
COPY --from=builder /app /app

# Step 10: Set the working directory in the container for runtime
WORKDIR /app

# Step 11: Define the command to run Karate tests
CMD ["mvn", "test", "-Dtest=KarateRunnerClass"]